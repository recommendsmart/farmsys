{
    "name": "drupal/update_helper",
    "description": "This module offers supporting functionalities to make configuration updates easier.",
    "type": "drupal-module",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Mladen Todorovic",
            "email": "mladen.todorovic@burda.com"
        },
        {
            "name": "Christian Fritsch",
            "email": "christian.fritsch@burda.com"
        },
        {
            "name": "Daniel Bosen",
            "email": "daniel.bosen@burda.com"
        },
        {
            "name": "Volker Killesreiter",
            "email": "killesreiter@burda.com"
        }
    ],
    "require": {
        "drupal/core": "^10 || ^11",
        "drupal/config_update": "^1.5 || ^2.0@alpha",
        "symfony/console": "^6.2||^7.0",
        "chi-teck/drupal-code-generator": "^3.0||^4.0"
    },
    "require-dev": {
        "drupal/checklistapi": "~1.0 || ~2.0",
        "drush/drush": "~12.0||~13.0",
        "drupal/tour": "^2.0"
    },
    "conflict": {
        "drupal/checklistapi": "<2.1.7",
        "drush/drush": "<12.0"
    },
    "extra": {
        "drush": {
            "services": {
                "drush.services.yml": "*"
            }
        }
    },
    "suggest": {
        "drupal/checklistapi": "Provides an API for creating fillable, persistent checklists. Required by the Update Helper Checklist module."
    }
